{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    {{#if withVue}}
    "dev": "vite",
    {{/if}}
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "{{author}}",
  {{#if private}}
  "private": true,
  {{else}}
  "license": "MIT",
  {{/if}}
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "printWidth": 160,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "commonjs": true,
      "browser": true,
      "node": true,
      "worker": true,
      "mocha": true
    },
    "parserOptions": {
      {{#if withVue}}
      "ecmaFeatures": {
        "jsx": true
      },
      {{/if}}
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      {{#if withVue}}
      "plugin:vue/vue3-recommended",
      {{/if}}
      "plugin:prettier/recommended"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.53.0",
    {{#if withVue}}
    "vue": "^3.3.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "eslint-plugin-vue": "^9.17.0",
    {{/if}}
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0"
  }
}
